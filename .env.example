# Contact Information
CONTACT_EMAIL=contact@sharifbayoumy.com
GITHUB_URL=https://github.com/GameBayoumy
LINKEDIN_URL=https://www.linkedin.com/in/sharif-bayoumy/

# LinkedIn OAuth Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:3000/api/linkedin/callback
LINKEDIN_OAUTH_SCOPE=r_liteprofile r_emailaddress
LINKEDIN_POST_AUTH_REDIRECT=/linkedin-experience-demo
LINKEDIN_ERROR_REDIRECT=/linkedin-experience-demo?linkedin=error
# Set to true to force mock LinkedIn data even when authenticated
LINKEDIN_FORCE_MOCK=false
NEXT_PUBLIC_LINKEDIN_API_URL=/api/linkedin
# Enable live LinkedIn API calls in development by setting this to true
NEXT_PUBLIC_LINKEDIN_ENABLE_LIVE=false
# Override to always use mock LinkedIn data in the browser
NEXT_PUBLIC_LINKEDIN_FORCE_MOCK=false

# GitHub API Configuration
# Get your GitHub token at: https://github.com/settings/tokens
# Required for enhanced rate limits and private repo access
NEXT_PUBLIC_GITHUB_TOKEN=your_github_token_here

# API Keys (if needed for contact form, analytics, etc.)
# RESEND_API_KEY=your_resend_api_key_here
# GOOGLE_ANALYTICS_ID=your_ga_id_here
# EMAILJS_SERVICE_ID=your_emailjs_service_id
# EMAILJS_TEMPLATE_ID=your_emailjs_template_id
# EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# Performance Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here
# VERCEL_ANALYTICS=true

# Development Settings
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=development
