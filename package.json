{
  "name": "xr-portfolio",
  "version": "1.0.0",
  "description": "Modern XR Developer Portfolio with 3D Effects",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --config eslint.config.mjs",
    "lint:fix": "eslint . --config eslint.config.mjs --fix",
    "lint:next": "next lint",
    "type-check": "tsc --noEmit",
    "type-check:deployment": "tsc --noEmit --project tsconfig.deployment.json",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "analyze": "ANALYZE=true next build",
    "clean": "rimraf .next out dist",
    "prepare": "husky install",
    "ci:install": "bun install --frozen-lockfile",
    "ci:build": "bun run build",
    "ci:build:safe": "bun run type-check:deployment && bun run build",
    "ci:test": "bun run lint && bun run type-check && bun run format:check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "node tests/performance-tests.js",
    "security:audit": "bun audit",
    "security:fix": "bun audit --fix",
    "precommit": "lint-staged",
    "postinstall": "husky install || true",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "release:patch": "bun version patch && bun run release",
    "release:minor": "bun version minor && bun run release",
    "release:major": "bun version major && bun run release",
    "release:beta": "semantic-release --branches beta",
    "release:alpha": "semantic-release --branches alpha",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s",
    "changelog:init": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0",
    "version:pre": "node scripts/version-hooks.js pre",
    "version:post": "node scripts/version-hooks.js post",
    "commit": "cz",
    "commit:lint": "commitlint --edit",
    "commit:prepare": "husky add .husky/commit-msg 'npx --no -- commitlint --edit $1'",
    "version:info": "node -e \"console.log(JSON.stringify({version: require('./package.json').version, node: process.version, bun: process.env.BUN_VERSION || 'unknown'}, null, 2))\"",
    "version:check": "bun outdated",
    "lighthouse": "lhci autorun",
    "lighthouse:local": "lhci autorun --config=.lighthouserc.js",
    "security:headers": "node scripts/security-headers-test.js",
    "vercel:env:sync": "node scripts/vercel-env-sync.js",
    "vercel:env:validate": "node scripts/vercel-env-sync.js validate",
    "deployment:checklist": "echo 'See scripts/deployment-checklist.md for full checklist'"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-toast": "^1.2.15",
    "@react-spring/core": "^10.0.1",
    "@react-spring/konva": "^10.0.1",
    "@react-spring/parallax": "^10.0.1",
    "@react-spring/three": "^10.0.1",
    "@react-spring/web": "^10.0.1",
    "@react-three/drei": "^10.7.4",
    "@react-three/fiber": "^9.3.0",
    "@react-three/postprocessing": "^3.0.4",
    "@sentry/nextjs": "^10.5.0",
    "@tanstack/react-query": "^5.85.5",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "claude-flow": "^2.0.0-alpha.91",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "file-loader": "^6.2.0",
    "framer-motion": "^12.23.12",
    "gsap": "^3.13.0",
    "leva": "^0.9.36",
    "lucide-react": "^0.379.0",
    "next": "^15.5.0",
    "next-themes": "^0.4.6",
    "raw-loader": "^4.0.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.62.0",
    "react-intersection-observer": "^9.16.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.1.13",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.179.1",
    "zod": "^3.25.76",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.5.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/d3": "^7.4.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@types/three": "^0.179.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.7",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0 <23.0.0",
    "bun": ">=1.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "node scripts/version-hooks.js pre",
      "postbump": "node scripts/version-hooks.js post"
    }
  }
}
