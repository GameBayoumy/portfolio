{
  "name": "xr-portfolio",
  "version": "1.0.0",
  "description": "Modern XR Developer Portfolio with 3D Effects",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "analyze": "ANALYZE=true next build",
    "clean": "rimraf .next out dist",
    "prepare": "husky install",
    "ci:install": "npm ci --prefer-offline --no-audit",
    "ci:build": "npm run lint && npm run type-check && npm run build",
    "ci:test": "npm run lint && npm run type-check && npm run format:check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "node tests/performance-tests.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "precommit": "lint-staged",
    "postinstall": "husky install || true",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release",
    "release:beta": "semantic-release --branches beta",
    "release:alpha": "semantic-release --branches alpha",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s",
    "changelog:init": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0",
    "version:pre": "node scripts/version-hooks.js pre",
    "version:post": "node scripts/version-hooks.js post",
    "commit": "cz",
    "commit:lint": "commitlint --edit",
    "commit:prepare": "husky add .husky/commit-msg 'npx --no -- commitlint --edit $1'",
    "version:info": "node -e \"console.log(JSON.stringify({version: require('./package.json').version, node: process.version, npm: process.env.npm_version || 'unknown'}, null, 2))\"",
    "version:check": "npm outdated",
    "lighthouse": "lhci autorun",
    "lighthouse:local": "lhci autorun --config=.lighthouserc.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.3.0",
    "@radix-ui/react-toast": "^1.2.15",
    "@react-spring/core": "^10.0.1",
    "@react-spring/konva": "^10.0.1",
    "@react-spring/parallax": "^10.0.1",
    "@react-spring/three": "^10.0.1",
    "@react-spring/web": "^10.0.1",
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "@react-three/postprocessing": "^2.16.0",
    "@rollup/rollup-win32-x64-msvc": "^4.48.0",
    "@sentry/nextjs": "^10.5.0",
    "@tanstack/react-query": "^5.85.5",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.0",
    "claude-flow": "^2.0.0-alpha.90",
    "clsx": "^2.1.0",
    "critters": "^0.0.23",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "file-loader": "^6.2.0",
    "framer-motion": "^11.0.0",
    "gsap": "^3.12.0",
    "leva": "^0.9.35",
    "lucide-react": "^0.379.0",
    "next": "^14.2.0",
    "next-themes": "^0.4.6",
    "raw-loader": "^4.0.2",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.51.0",
    "react-intersection-observer": "^9.8.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.163.0",
    "zod": "^3.23.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@lhci/cli": "^0.13.0",
    "@next/bundle-analyzer": "^14.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/d3": "^7.4.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.179.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "autoprefixer": "^10.4.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "rimraf": "^5.0.0",
    "semantic-release": "^24.2.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.17.0 <23.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "node scripts/version-hooks.js pre",
      "postbump": "node scripts/version-hooks.js post"
    }
  }
}
